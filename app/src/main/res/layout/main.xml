<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ZombyRecorderActivity" >

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temperatureCheckBox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/accelerometerCheckBox"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:gravity="top"
        android:maxLines="30"
        android:scrollbars="vertical" 
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/accelerometerCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:text="@string/accelerometer" />

    <CheckBox
        android:id="@+id/magneticFieldCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:text="@string/magnetic_field" />

    <CheckBox
        android:id="@+id/orientationCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="130dp"
        android:text="@string/orientation" />

    <CheckBox
        android:id="@+id/proximityCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="165dp"
        android:text="@string/proximity" />
    
    <CheckBox
        android:id="@+id/temperatureCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="200dp"
        android:text="@string/temperature" />

    <CheckBox
        android:id="@+id/batteryCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="170dp"
        android:text="@string/battery" />

    <CheckBox
        android:id="@+id/locationCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="170dp"
        android:text="@string/location" />
    
    <CheckBox
        android:id="@+id/networkCheckBox"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="170dp"
        android:text="@string/network" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >
        
	    <ImageButton
	        android:id="@+id/rec_button"
	        android:background="@drawable/rec"
	        android:contentDescription="@string/rec"
	        android:layout_width="@dimen/imagebutton"
	        android:layout_height="@dimen/imagebutton"/>
	
	    <ImageButton
	        android:id="@+id/play_button"
	        android:background="@drawable/play"
	        android:visibility="gone"
	        android:contentDescription="@string/play"
	        android:layout_width="@dimen/imagebutton"
	        android:layout_height="@dimen/imagebutton"
	        android:layout_toRightOf="@id/play_button"/>

	    <ImageButton
	        android:id="@+id/pause_button"
	        android:background="@drawable/pause"
	        android:visibility="gone"
	        android:contentDescription="@string/pause"
	        android:layout_width="@dimen/imagebutton"
	        android:layout_height="@dimen/imagebutton"
	        android:layout_toRightOf="@id/rec_button"/>
	
	    <ImageButton
	        android:id="@+id/stop_button"
	        android:background="@drawable/stop"
	        android:visibility="gone"
	        android:contentDescription="@string/stop"
	        android:layout_width="@dimen/imagebutton"
	        android:layout_height="@dimen/imagebutton"
	        android:layout_marginLeft="@dimen/button_margin"
	        android:layout_toRightOf="@id/pause_button"/> 
	    
    </RelativeLayout>

</RelativeLayout>